<HeaderButton>:
    size_hint: 0.3, 1
    font_name: "textures\\DMsans.ttf"
    background_normal: ""
    background_color: "#f6f8fc"

<SubmitInput>:
    size_hint: None, None
    width: min(self.parent.width*0.9, self.parent.height*7.5)
    height: min(self.width/7.5, self.parent.height*0.9)
    pos_hint: {"center_y": 0.5, "center_x": 0.5}
    text_size: self.size
    foreground_color: "#a9aaa9"
    hint_text_color: "#a9aaa9"
    background_color: 246/255, 248/255, 252/255, 0
    cursor_color: 0, 0, 0, 0
    multiline: False
    font_size: self.height/2
    halign: "center"
    valign: "center"
    font_name: "textures\\DMsans.ttf"

    canvas.after:
        Color:
            rgb: 169/255, 170/255, 169/255

        Line:
            points: self.x + self.width * 0.1, self.y, self.x + self.width*0.9, self.y
            width: 1.5
        Line:
            points: self.x + self.width * 0.1, self.y+self.height, self.x + self.width*0.9, self.y+self.height
            width: 1.5
        SmoothLine:
            width: 1.75
            ellipse: self.x, self.y, self.width*0.2, self.height, 0, -180, 100

        SmoothLine:
            width: 1.75
            ellipse: self.x+self.width*0.8, self.y, self.width*0.2, self.height, 0, 180, 100

<SubmitInputPlaceholder@Widget>:
    size_hint: None, 1
    width: (self.parent.width - min(self.parent.width*0.9, self.parent.height*7.5))/2


<DynamicText>:
    color: "#a9aaa9"
    text_size: self.size
    halign: "center"
    valign: "center"


<SubmitDropdownButton>:
    size_hint: None, None
    width: min(self.parent.width*0.9, self.parent.height*7.5)
    height: min(self.width/7.5, self.parent.height*0.8)
    pos_hint: {"center_y": 0.5, "center_x": 0.5}
    background_color: rgba(0, 0, 0, 0)
    color: "#a9aaa9"
    font_name: "textures\\DMsans.ttf"
    on_press: self.open_dropdown()

    canvas.after:
        Color:
            rgb: 169/255, 170/255, 169/255

        Line:
            points: self.x + self.width * 0.1, self.y, self.x + self.width*0.9, self.y
            width: 1.5
        Line:
            points: self.x + self.width * 0.1, self.y+self.height, self.x + self.width*0.9, self.y+self.height
            width: 1.5
        SmoothLine:
            width: 1.75
            ellipse: self.x, self.y, self.width*0.2, self.height, 0, -180, 100

        SmoothLine:
            width: 1.75
            ellipse: self.x+self.width*0.8, self.y, self.width*0.2, self.height, 0, 180, 100

FloatLayout:

    canvas:
        Color:
            rgb: 246/255, 248/255, 252/255
        Rectangle:
            size: self.size
            pos: self.pos
    WarningWidget:
    BoxLayout:
        pos_hint: {"top": 1}
        size_hint: 1, 0.15
        canvas.before:
            Color:
                rgb: 169/255, 170/255, 169/255
            Rectangle:
                size: self.size[0], self.size[1] + 3
                pos: self.pos[0], self.pos[1] - 3
            Color:
                rgb: 246/255, 248/255, 252/255
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            size_hint: 0.8, 1
            markup: True
            text: "[b][color=#4285f4]T[/color][color=#ea4f33]r[/color][color=#fbbc05]e[/color][color=#34a853]n[/color][color=#4285f4]d[/color][color=#ea4f33]a[/color][color=#fbbc05]l[/color][color=#34a853]y[/color][color=#4285f4]z[/color][color=#ea4f33]e[/color][color=#fbbc05]r[/color][/b] [color=#a9aaa9]beta[/color]"
            font_size: min(root.width/(len(self.text)/3), root.height/10)*4
            text_size: self.size
            font_name: "textures\\DMsans.ttf"
            color: "#000000"
            halign: "left"
            valign: "center"
            padding: root.width/100
        HeaderButton:
            text: "Settings"
            color: "#a9aaa9"
            font_size: min(root.width/50, root.height/10)
        Widget:

    FloatLayout:
        size_hint: 1, 0.85
        pos_hint: {"bottom": 0}
        BoxLayout:
            size_hint: 0.8, 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            canvas:
                Color:
                    rgba: 169/255, 170/255, 169/255, 0.26
                RoundedRectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: "vertical"
                padding: root.height / 50
                BoxLayout:
                    BoxLayout:
                        orientation: "vertical"
                        size_hint: 0.25, 1
                        canvas:
                            Color:
                                rgb: 246/255, 248/255, 252/255
                            RoundedRectangle:
                                size: self.size
                                pos: self.pos
                                radius: 7, 7, 7, 7
                        DynamicText:
                            text: "Queries"
                            size_hint: 1, 0.2
                            font_size: min(root.width/55, root.height/11)
                        DynamicText:
                            text: "(Click item to remove)"
                            size_hint: 1, 0.05
                            font_size: min(root.width/100, root.height/20)
                        Widget:
                            size_hint: 1, None
                            height: 3
                            canvas:
                                Color:
                                    rgb: 169/255, 170/255, 169/255
                                Line:
                                    width: 1.75
                                    points: self.x+self.width*0.05, self.y, self.x+self.width*0.9, self.y
                        ScrollView:
                            QueryBoxLayout:

                        AddQueryButton:


                    Widget:
                        size_hint: None, 1
                        width: 10
                    BoxLayout:
                        orientation: "vertical"
                        BoxLayout:
                            padding: min(root.width, root.height)/100
                            orientation: "vertical"
                            size_hint: 1, 0.5
                            canvas:
                                Color:
                                    rgb: 246/255, 248/255, 252/255
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: 7, 7, 7, 7
                            DynamicText:
                                text: "Date"
                                size_hint: 1, 0.2
                                font_size: min(root.width/55, root.height/11)
                            Widget:
                                size_hint: 1, 0.1
                            Widget:
                                size_hint: 1, None
                                height: 3
                                canvas:
                                    Color:
                                        rgb: 169/255, 170/255, 169/255
                                    Line:
                                        width: 1.75
                                        points: self.x+self.width*0.0125, self.y, self.x+self.width*0.975, self.y
                            Widget:
                                size_hint: 1, 0.1
                            BoxLayout:
                                size_hint: 1, 0.3
                                BoxLayout:
                                    SubmitInputPlaceholder:
                                    SubmitInput:
                                        hint_text: "Time from: YYYY/MM/DD"
                                        input_type: "from"
                                    SubmitInputPlaceholder:

                                DynamicText:
                                    text: "to"
                                    font_size: min(root.width/75, root.height/15)
                                    size_hint: 0.3, 1
                                BoxLayout:
                                    SubmitInputPlaceholder:
                                    SubmitInput:
                                        hint_text: "Time to: YYYY/MM/DD"
                                        input_type: "to"
                                    SubmitInputPlaceholder:

                        Widget:
                            size_hint: 1, None
                            height: 10
                        BoxLayout:
                            orientation: "vertical"
                            canvas:
                                Color:
                                    rgb: 246/255, 248/255, 252/255
                                RoundedRectangle:
                                    size: self.size
                                    pos: self.pos
                                    radius: 7, 7, 7, 7
                            DynamicText:
                                text: "Region and Type"
                                size_hint: 1, 0.2
                                font_size: min(root.width/55, root.height/11)

                            Widget:
                                size_hint: 1, None
                                height: 3
                                canvas:
                                    Color:
                                        rgb: 169/255, 170/255, 169/255
                                    Line:
                                        width: 1.75
                                        points: self.x+self.width*0.0125, self.y, self.x+self.width*0.975, self.y

                            GridLayout:
                                padding: [root.height/25, 0, root.height/25, 0]
                                cols: 2
                                DynamicText:
                                    text: "Region:"
                                    font_size: min(root.width/55, root.height/11)
                                    halign: "left"
                                BoxLayout:
                                    SubmitDropdownButton:
                                        text: "Worldwide"
                                        button_type: "region"

                                DynamicText:
                                    text: "Search Type:"
                                    font_size: min(root.width/55, root.height/11)
                                    halign: "left"
                                BoxLayout:
                                    SubmitDropdownButton:
                                        text: "Web Search"
                                        button_type: "stype"
                                DynamicText:
                                    text: "Search Category:"
                                    font_size: min(root.width/55, root.height/11)
                                    halign: "left"
                                BoxLayout:
                                    SubmitDropdownButton:
                                        text: "All Categories"
                                        button_type: "scat"



                Widget:
                    size_hint: 1, None
                    height: 10
                RunButton:
                    background_normal: ""
                    size_hint: 1, 0.25
                    background_color: "#f6f8fc"
                    text: "Begin Search"
                    color: "#a9aaa9"
                    text_size: self.size
                    font_size: min(root.width/40, root.height/8)
                    valign: "center"
                    halign: "center"
                    on_press: self.run_scraper()




